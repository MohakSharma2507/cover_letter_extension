{
  "manifest_version": 3,
  "name": "Cover Letter Maker",
  "version": "2.0",
  "description": "Generate customized cover letters quickly",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}